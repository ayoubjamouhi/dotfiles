{
  "workbench.colorTheme": "Nord",
  "editor.fontFamily": "Operator Mono Light", //i.e. add "Medium"
  "editor.fontWeight": "300",
  "editor.fontSize": 15,
  "editor.cursorBlinking": "expand",
  "explorer.openEditors.visible": 0,
  "workbench.editor.enablePreview": false,
  "editor.minimap.enabled": false,
  "editor.renderIndentGuides": false,
  "editor.tokenColorCustomizations": {
    // "comments": "#8d8580"
  },
  "editor.matchBrackets": "always",
  // Changes the multi cursor mouse binding
  //"editor.multiCursorModifier": "ctrlCmd",
  "files.associations": {
    ".php_cs": "php",
    ".php_cs.dist": "php"
  },
  // The Cursive font is operator Mono, it's $200 and you need to buy it to get the cursive
  "editor.lineHeight": 23,
  "editor.letterSpacing": 0.5,
  "files.trimTrailingWhitespace": true,
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 3,
  "editor.renderWhitespace": "all",
  "editor.tabSize": 2,
  "php.validate.executablePath": "/usr/bin/php",
  "php.validate.enable": true,
  "php.validate.run": "onType",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
  },
  "window.title": "${folderName}${separator}${activeEditorMedium}",
  "workbench.iconTheme": "eq-material-theme-icons-darker",
  "diffEditor.ignoreTrimWhitespace": false,
  /*"files.associations": {
          "*.js": "javascriptreact"
        }*/
  // These are all my auto-save configs
  // turn it off for JS and JSX, we will do this via eslint
  "[javascript]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": null
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Optional BUT IMPORTANT: If you have the prettier extension enabled for other languages like CSS and HTML, turn it off for JS since we are doing it through Eslint already
  "editor.maxTokenizationLineLength": 40000,
  "php-cs-fixer.executablePath": "${extensionPath}/php-cs-fixer.phar",
  "php-cs-fixer.lastDownload": 1638217152766,
  // These are all my auto-save configs
  // show eslint icon at bottom toolbar
  "eslint.alwaysShowStatus": true,
  // tell the ESLint plugin to run on save
  // Optional BUT IMPORTANT: If you have the prettier extension enabled for other languages like CSS and HTML, turn it off for JS since we are doing it through Eslint already
  "editor.lineNumbers": "relative",
  "git.enableSmartCommit": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "[php]": {
    "editor.defaultFormatter": "junstyle.php-cs-fixer"
  },
  "php-cs-fixer.rules": "@PSR12",
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "gitlens.hovers.currentLine.over": "line",
  "workbench.editor.showTabs": false,
  "git.confirmSync": false,
  "workbench.colorCustomizations": {
    "activityBarBadge.background": "#ffc600",
    "editorCursor.foreground": "#ffc600",
    "inputValidation.errorBorder": "#ffc600",
    "panel.border": "#ffc600",
    "panelTitle.activeBorder": "#ffc600",
    "panelTitle.activeForeground": "#ffc600",
    "peekView.border": "#ffc600",
    "peekViewTitleLabel.foreground": "#ffc600",
    "tab.activeBorder": "#ffc600",
    "statusBar.border": "#ffc600"
  },
  "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "editor.bracketPairColorization.enabled": true,
  "[html]": {
    "editor.defaultFormatter": "HookyQR.beautify"
  },
  "vs-kubernetes": {
    "vscode-kubernetes.helm-path.linux": "/home/dotnet/.vs-kubernetes/tools/helm/linux-amd64/helm"

  },
  "window.menuBarVisibility": "hidden",
  "[css]": {
    "editor.defaultFormatter": "HookyQR.beautify"
  },
  "[scss]": {
    "editor.defaultFormatter": "HookyQR.beautify"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "extensions.ignoreRecommendations": true,
  "files.autoSave": "afterDelay",
  "[vue]": {
    "editor.defaultFormatter": "octref.vetur"
  },
}
